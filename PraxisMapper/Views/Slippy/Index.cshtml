<body>
    <div id="mapid" style="height:100%">

    </div>
    <script type="text/javascript">
        //var baseSite = "http://us.praxismapper.org";
        var baseSite = "http://localhost/PraxisMapper";
        var url = baseSite + '/MapTile/DrawSlippyTile/{id}/{z}/{x}/{y}.png'
        var baseData = L.tileLayer(url, {id: 1, tileSize:512, maxZoom: 20, minZoom: 9, zoomOffset: -1 })
        var ptt = L.tileLayer(url, { id: 2, tileSize: 512, maxZoom: 20, minZoom: 9, zoomOffset: -1 })
        var ac = L.tileLayer(url, { id: 3, tileSize: 512, maxZoom: 20, minZoom: 9, zoomOffset: -1 })
        var generated = L.tileLayer(url, { id: 4, tileSize: 512, maxZoom: 20, minZoom: 9, zoomOffset: -1 })
        var adminBounds = L.tileLayer(url, { id: 6, tileSize: 512, maxZoom: 20, minZoom: 9, zoomOffset: -1 })
        var baseDataTEstV4 = L.tileLayer(url, { id: 7, tileSize: 512, maxZoom: 20, minZoom: 9, zoomOffset: -1 })
        var offlineEstimateAreas = L.tileLayer(url, { id: 12, tileSize: 512, maxZoom: 20, minZoom: 9, zoomOffset: -1 })

        var baseLayers = {
            "Base Data": baseData,
            "Base Data TestV4": baseDataTEstV4,
        };
        var overlays = {
            "Paint The Town": ptt,
            "Area Control": ac,
            "Server-Generated": generated,
            "Admin Boundaries": adminBounds,
            "Offline Estimates": offlineEstimateAreas
        };

    var mymap = L.map('mapid').setView([41.503425, -81.698995], 13);
    //    var mymap = L.map('mapid').setView([38.8280, -75.4556], 15);
    L.tileLayer(baseSite + '/MapTile/DrawSlippyTile/1/{z}/{x}/{y}.png', {
    maxZoom: 20,
    minZoom: 9,
    zoom: 15,
    id: 'none',
    tileSize: 512,
    zoomOffset: -1,
    attribution: 'Map data &copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors, Imagery via <a href= "https://github.com/drakewill-crl/PraxisMapper">PraxisMapper</a>',
    accessToken: 'none'
    }).addTo(mymap);

        L.control.layers(baseLayers, overlays).addTo(mymap);
    </script>
